{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "removeComments": true,
    "rootDir": "./src",
    "strict": true,
    "target": "es2020",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/__fixtures__/**/*", "./src/**/__tests__/**/*"]
}
